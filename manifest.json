{
  "manifest_version": 3,
  "name": "Sleep4Fajr",
  "description": "Sleep4Fajr is an extension made to help you wake up for fajr prayer by giving you the best time to sleep.",
  "action": {
    "default_popup": "src/pages/popup/index.html",
    "default_icon": {
      "32": "icon32x32.png"
    }
  },
  "icons": {
    "16": "icon16x16.png",
    "180": "icon180x180.png",
    "192": "icon192x192.png",
    "512": "icon521x512.png"
  },
  "background": {
    "service_worker": "src/pages/background/index.ts"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "alarms",
    "notifications",
    "storage"
  ],
  "host_permissions": ["<all_urls>"],
  "devtools_page": "src/pages/devtools/index.html",
  "web_accessible_resources": [
    {
      "resources": [
        "contentStyle.css",
        "icon180x180.png",
        "icon32x32.png",
        "icon16x16",
        "icon192x192",
        "icon521x512"
      ],
      "matches": []
    }
  ]
}
